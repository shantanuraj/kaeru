{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react",
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "src/**/__tests__/**/*"
  ]
}
